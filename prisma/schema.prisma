datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Category {
  CLOTHING
  ELECTRONICS
  FURNITURE
  ACCESSORIES
  BOOKS
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String    @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Decimal
  images      String[]
  category    Category
  inStock     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id         String      @id @default(uuid())
  email      String
  firstName  String
  lastName   String
  address    String
  city       String
  postalCode String
  country    String
  total      Float
  items      OrderItem[]
  createdAt  DateTime    @default(now())
}

model OrderItem {
  id        String @id @default(uuid())
  order     Order  @relation(fields: [orderId], references: [id])
  orderId   String
  productId String
  name      String
  price     Float
  quantity  Int
  image     String
}
